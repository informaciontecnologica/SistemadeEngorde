<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".inicio">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="always">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso del Animal" />

            <EditText
                android:id="@+id/peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Peso de engorde animal"
                android:ems="10"
                android:inputType="number"
                android:text="300"
                tools:text="Peso kg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de raza" />

            <Spinner
                android:id="@+id/raza"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:entries="@array/razas"
                android:prompt="@string/tiporaza" />

            <TextView
                android:id="@+id/Sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexo" />

            <Spinner
                android:id="@+id/sexo"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:entries="@array/tsexo"
                android:prompt="@string/tiposexo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Distancia de Pastoreo" />

            <EditText
                android:id="@+id/pastoreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1500" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stress termico" />

            <EditText
                android:id="@+id/stress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="35" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frame" />

            <Spinner
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tframe"
                android:prompt="@string/tipoframe" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GDP requerida (Kg./dÃ­a)" />

            <EditText
                android:id="@+id/GDP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="0.8" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Demanda Nutricional "
                android:textSize="18dp" />

            <TextView
                android:id="@+id/ConsumoEstimado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Resultados"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Calcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular" />

            <Button
                android:id="@+id/Balanceo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Requerimientos"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Balanceo"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="459dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>